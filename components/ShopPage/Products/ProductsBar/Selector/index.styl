.root
  flex-direction column
  +tablet()
    flex-direction row

.searchResults, .sortLabel
  color #6c6c6c
  font-size 2.5u
  font-weight 600
  margin 0
  white-space normal

.red
  color red

.sorting
  flex-direction row
  margin-left 0
  margin-top 2u
  margin-bottom 2u
  +tablet()
    margin-top 0
    margin-bottom 0
    margin-left 8u

.sortSelect
  flex-direction row
  width 14u
  align-items center
  justify-content space-between

.sortValue
  color #090909
  font-size 2.5u
  padding-left 1u

.icon
  fill #090909