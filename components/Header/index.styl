.root
  padding 0 2u
  box-sizing border-box
  margin-top 1u
  margin-bottom 2u
  padding-right 2u
  padding-left 2u
  +tablet()
    padding-right 4u
    padding-left 4u
  +desktop()
    padding-right 6u
    padding-left 6u
  +wide()
    padding-right 12u
    padding-left 12u

.header
  flex-direction row
  align-items center
  justify-content space-between
  padding 4u 0
  +desktop()
    padding 0

.logo
  font-size 5u
  font-weight 600

.logoDot
  color red

.navButtons
  flex-direction row

.icon
  margin-left 2u
  border none
  justify-content center
  cursor pointer
  &.burger
    border 1px solid grey
    padding 4px
    border-radius 0
  &.first
    margin-left 0