.footer
  background #f5f5f5
  padding 6u 2u
  align-items center
  +tablet()
    padding 10u 2u
  +desktop()
    padding 12u 2u

.container
  padding 0 2u
  margin-left auto
  margin-right auto
  margin-left -2u
  margin-right -2u
  flex-wrap wrap
  width 100%
  +tablet()
    align-items center
    flex-flow row wrap
    justify-content space-between
  +desktop()
    flex-direction row
    align-items flex-start

.first
  position relative
  flex-grow 0
  flex-shrink 0
  flex-basis 100%
  margin-top 0
  +tablet()
    flex-basis 40%
  +desktop()
    margin-top 4u
    flex-basis 25%

.social
  margin-top 2u

.second
  margin-top 4u
  position relative
  flex-grow 0
  flex-shrink 0
  flex-basis 100%
  +tablet()
    flex-basis 60%
    align-items center
  +desktop()
    flex-basis 50%
    margin-top 0

.logo
  font-size 5u
  font-weight 600

.logoDot
  color red

.menu
  flex-direction row
  margin-top 2u

.line
  border-bottom 1px solid #474747
  width 20u
  margin-top 1u

.third
  width 100%
  margin-top 5u
  +desktop()
    flex-basis 25%
    align-items flex-end
    margin-top 4u

.txt
  font-size 2u
  line-height 3u
  color #585858
  font-weight 300

.copyright
  margin-top 2u
  